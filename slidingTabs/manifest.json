{
  "manifest_version": 3,
  "name": "Tab Slider",
  "version": "1.0",
  "description": "Use keyboard shortcuts to rearrange Chrome tabs.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Move Tab Left"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Move Tab Right"
    }
  }
}
